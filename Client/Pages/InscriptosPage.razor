@page "/inscriptos"

<MudContainer>
    <MudCard>
        <MudCardContent>
            <MudText Typo="Typo.h5">Lista de Inscriptos</MudText>
            <MudTable Items="@inscriptos" Dense="true">
                <HeaderContent>
                    <MudTh>Nombre</MudTh>
                    <MudTh>Email</MudTh>
                    <MudTh>Curso</MudTh>
                </HeaderContent>
                <RowTemplate Context="item" >
                    <MudTd>@item.Nombre</MudTd>
                    <MudTd>@item.Email</MudTd>
                    <MudTd>@item.Curso</MudTd>
                </RowTemplate>
            </MudTable>
            <MudButton OnClick="ExportToExcel" StartIcon="@Icons.Material.Filled.Download" Color="Color.Primary">Exportar a Excel</MudButton>
        </MudCardContent>
    </MudCard>
</MudContainer>

